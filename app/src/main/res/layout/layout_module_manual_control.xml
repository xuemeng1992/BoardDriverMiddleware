<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp">

            <Switch
                android:id="@+id/sw_manual_control_blower_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="风扇A"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <Switch
                android:id="@+id/sw_manual_control_heater"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="加热器"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp">

            <Switch
                android:id="@+id/sw_manual_control_blower_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="风扇B"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <Switch
                android:id="@+id/sw_manual_control_doorlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="门磁灯"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_manual_control_get_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ripple_bg"
            android:text="获取控制器"
            android:textColor="@color/black" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="175dp"
        android:background="@color/gray_white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tv_manual_control_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="00.0"
                android:textColor="@color/gray_white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_manual_control_get_temp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_manual_control_temp"
                android:background="@drawable/ripple_bg"
                android:text="获取温度"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_manual_control_get_temp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btn_manual_control_get_temp"
                android:background="@color/gray_white"
                android:ems="3"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_manual_control_temp_compensate"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_manual_control_get_temp_compensate"
                android:background="@drawable/ripple_bg"
                android:text="温度补偿"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_manual_control_get_temp_compensate"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:text="获取温度补偿"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tv_manual_control_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="00.0"
                android:textColor="@color/gray_white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_manual_control_get_humidity"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_manual_control_humidity"
                android:background="@drawable/ripple_bg"
                android:text="获取湿度"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_manual_control_get_humidity"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btn_manual_control_get_humidity"
                android:background="@color/gray_white"
                android:ems="3"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_manual_control_humidity_compensate"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_manual_control_get_humidity_compensate"
                android:background="@drawable/ripple_bg"
                android:text="湿度补偿"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_manual_control_get_humidity_compensate"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_bg"
                android:text="获取湿度补偿"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
