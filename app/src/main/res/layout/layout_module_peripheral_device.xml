<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="二维扫码枪:"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_qr_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_qr_code" />

        <TextView
            android:id="@+id/tv_qr_code_tty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/spinner_qr_code"
            android:gravity="center"
            android:text="使用串口:"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_qr_code_tty"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_qr_code_tty" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="打印机:"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_printer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/tv_printer" />

        <TextView
            android:id="@+id/tv_printer_tty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/spinner_printer"
            android:gravity="center"
            android:text="使用串口:"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_printer_tty"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_printer_tty" />
    </RelativeLayout>
</LinearLayout>
