<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_blower_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="风扇A(ch12)温度设置:"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_blower_a_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_blower_a"
            android:text="开启温度"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_blower_a_open"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_blower_a_open"
            android:background="@color/gray_white"
            android:ems="3"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_blower_a_open_sheshidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/et_blower_a_open"
            android:text="°C"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_blower_a_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@+id/tv_blower_a_open_sheshidu"
            android:text="关闭温度"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_blower_a_close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_blower_a_close"
            android:background="@color/gray_white"
            android:ems="3"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_blower_a_close_sheshidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/et_blower_a_close"
            android:text="°C"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_blower_a_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:text="设置"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_blower_a_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_blower_a_setup"
            android:background="@drawable/ripple_bg"
            android:text="查询"
            android:textColor="@color/black" />
    </RelativeLayout>

