<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_watthour_meter_485"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="485设置:"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_watthour_meter_485"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_watthour_meter_485" />

        <Spinner
            android:id="@+id/spinner_watthour_meter_bps"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/spinner_watthour_meter_485" />

        <Button
            android:id="@+id/btn_watthour_meter_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_watthour_meter_setup"
            android:background="@drawable/ripple_bg"
            android:text="查询"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_watthour_meter_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:text="设置"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_watthour_meter_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已使用电量值："
            android:textColor="@color/gray_white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_watthour_meter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/tv_watthour_meter_number_text"
            android:text="00  kW.h"
            android:textColor="@color/gray_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_watthour_meter_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_bg"
            android:text="获取电表"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>
