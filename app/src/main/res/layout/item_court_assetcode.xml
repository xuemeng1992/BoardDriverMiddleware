<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--主/副柜-->
    <com.rocktech.boarddriver.ui.view.MySpinner
        android:id="@+id/sp_cupboard_court_type"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1" />
    <!--隔口类型 32/16-->
    <com.rocktech.boarddriver.ui.view.MySpinner
        android:id="@+id/sp_cupboard_court_board_type"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1" />
    <!--摆放位置-->
    <Spinner
        android:id="@+id/sp_cupboard_court_placement"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1" />
    <!--默认-->
    <EditText
        android:id="@+id/et_cupboard_court_default_num"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="2"
        android:text="00"
        android:textColor="@color/gray_white"
        android:textSize="20sp" />
    <!--流水号-->
    <EditText
        android:id="@+id/et_cupboard_court_serial_number"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/gray_white"
        android:textSize="20sp" />
</LinearLayout>
